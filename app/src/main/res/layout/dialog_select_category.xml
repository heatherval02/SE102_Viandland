<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="30dp"
        android:background="@drawable/dialog_bg1">

        <ImageButton
            android:id="@+id/closeBtn"
            android:background="@drawable/ic_baseline_close_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="-7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/TextAppearance.AppCompat.Large"
            android:padding="5dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/categoryText"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:hint="Please select category"
            android:textAlignment="center"
            android:background="@drawable/custom_edittext"
            android:padding="15dp"
            android:layout_marginTop="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TableRow
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <Button
                    android:id="@+id/breakfastCategory"
                    android:text="Breakfast"
                    android:background="@drawable/button_round1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"
                    android:textSize="10dp"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Small"/>

                <Button
                    android:id="@+id/lunchCategory"
                    android:text="Lunch"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:background="@drawable/button_round1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="10dp"
                    android:layout_column="2"
                    android:layout_marginRight="5dp"/>



            </TableRow>
            <TableRow
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/dinnerCategory"
                    android:background="@drawable/button_round1"
                    android:text="Dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:textSize="10dp"
                    android:layout_marginRight="5dp"
                    style="@style/TextAppearance.AppCompat.Small"/>
                
                <Button
                    android:id="@+id/healthyMealsCategory"
                    android:text="Healthy Meals"
                    android:background="@drawable/button_round1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:layout_marginRight="5dp"
                    style="@style/TextAppearance.AppCompat.Small"/>





            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/snacksCategory"
                    android:text="Snacks"
                    android:background="@drawable/button_round1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_marginRight="5dp"
                    android:textSize="10dp"
                    style="@style/TextAppearance.AppCompat.Small"/>


                <Button
                    android:id="@+id/otherCategory"
                    android:text="Other"
                    android:background="@drawable/button_round1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:layout_marginRight="5dp"
                    style="@style/TextAppearance.AppCompat.Small"/>

            </TableRow>




        </TableLayout>


        <Button
            android:id="@+id/publishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Category"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>