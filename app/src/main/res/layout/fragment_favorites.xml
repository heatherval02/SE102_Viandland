<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentFavorites">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your favorite recipe's"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:queryHint="Search a recipe..."
        app:iconifiedByDefault="false"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="20dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dilago_todays_recipe_background"/>

            <TextView
                android:id="@+id/recipeTitle"
                android:textColor="#262626"
                android:layout_toRightOf="@+id/recipeImage"
                android:text="Recipe Name"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/recipeCook"
                android:textColor="#d3d3d3"
                android:text="Recipe Cook:"
                android:layout_toRightOf="@+id/recipeImage"
                android:layout_below="@id/recipeTitle"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recipeDateAdded"
                android:textColor="#d3d3d3"
                android:text="Date Added"
                android:layout_toRightOf="@+id/recipeImage"
                android:layout_below="@id/recipeCook"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>