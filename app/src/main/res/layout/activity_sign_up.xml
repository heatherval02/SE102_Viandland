<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_sign_up"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="160dp"
        android:layout_marginStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/usernameLabel"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/purple_700"
        android:text="Please input your desired username:"
        android:layout_below="@+id/signUpText"
        android:padding="10dp"
        />

    <androidx.cardview.widget.CardView
        style="@style/Widget.Neumorph.CardView"
        android:id="@+id/usernameInputText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameLabel"
        android:layout_marginTop="10dp"
        app:neumorph_shapeType="pressed"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

    <EditText
        android:id="@+id/usernameInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username or email"
        android:textColorHint="#909090"
        android:paddingStart="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:background="@drawable/custom_edittext"
        android:textCursorDrawable="@drawable/login_corner"/>
    </androidx.cardview.widget.CardView>


    <Button
        android:background="@drawable/button_round"
        android:layout_below="@id/usernameInputText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/nextBtn"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:paddingRight="20dp"
        android:paddingLeft="40dp"
        android:layout_centerInParent="true"
        />


    <TextView
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back to log in"
        android:layout_below="@+id/nextBtn"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>