<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/one"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="200dp"
        android:layout_marginStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/purple_700"
        android:text="Please input your desired username:"
        android:layout_below="@+id/signUpText"
        android:padding="10dp"
        />

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:id="@+id/usernameInputText1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/usernameLabel"
        android:layout_marginTop="10dp"
        app:neumorph_shapeType="pressed"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">



    <EditText
        android:id="@+id/usernameInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username or email"
        android:textColorHint="@color/purple_700"
        android:paddingStart="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/purple_700"
        android:padding="10dp"
        android:background="@drawable/login_edittext_bg"
        android:textCursorDrawable="@drawable/login_corner"/>
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:layout_below="@id/usernameInputText1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/nextBtn"
        />


    <TextView
        android:id="@+id/cancelLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back to log in"
        android:layout_below="@+id/nextBtn"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        />

</RelativeLayout>