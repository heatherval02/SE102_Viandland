<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="30dp"
    android:background="@drawable/dialog_bg1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cartoon2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="All information will be viewed by all Viandland users, please confirm to continue."/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/confirmButton"
                android:text="Confirm"
                android:background="@drawable/button_round1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_column="1"
                android:layout_marginRight="5dp"
                android:textSize="10dp"
                style="@style/TextAppearance.AppCompat.Small.Inverse"/>


            <Button
                android:id="@+id/cancelButton"
                android:text="Cancel"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:background="@drawable/button_round1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="10dp"
                android:layout_column="2"
                android:layout_marginRight="5dp"/>

        </TableRow>
    </TableLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
